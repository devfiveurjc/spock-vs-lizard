<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jugsdorvsJugador">


    <TextView
        android:id="@+id/nombre"
        android:layout_width="84dp"
        android:layout_height="25dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.461" />

    <ImageView
        android:id="@+id/Datojugador"
        android:layout_width="148dp"
        android:layout_height="164dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="152dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pngwing_com" />

    <ImageView
        android:id="@+id/Datomaquina"
        android:layout_width="137dp"
        android:layout_height="161dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="152dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pngwing_com" />

    <TextView
        android:id="@+id/username"
        android:layout_width="73dp"
        android:layout_height="33dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="364dp"
        android:text="nombre :"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/piedra"
        android:layout_width="121dp"
        android:layout_height="101dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="396dp"
        android:onClick="cambiaimagen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/piedra" />

    <ImageView
        android:id="@+id/tijera"
        android:layout_width="111dp"
        android:layout_height="106dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="396dp"
        android:onClick="cambiaimagen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tijera" />

    <ImageView
        android:id="@+id/papel"
        android:layout_width="112dp"
        android:layout_height="102dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="400dp"
        android:onClick="cambiaimagen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/papel" />

    <ImageView
        android:id="@+id/lagarto"
        android:layout_width="142dp"
        android:layout_height="167dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="48dp"
        android:onClick="cambiaimagen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/lagarto" />

    <ImageView
        android:id="@+id/spok"
        android:layout_width="141dp"
        android:layout_height="165dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="44dp"
        android:onClick="cambiaimagen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/spock" />

    <TextView
        android:id="@+id/Resultado"
        android:layout_width="347dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#00BCD4"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102" />

</androidx.constraintlayout.widget.ConstraintLayout>